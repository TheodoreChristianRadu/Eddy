<DockPanel Width="240" Margin="15,15,15,0" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel.Resources>
        <DropShadowEffect x:Key="Shadow" BlurRadius="5" ShadowDepth="0"/>
    </DockPanel.Resources>
    <TextBlock Name="name" Foreground="DarkRed" Effect="{StaticResource Shadow}" DockPanel.Dock="Left"/>
    <TextBlock Name="value" Foreground="DarkRed" Effect="{StaticResource Shadow}" DockPanel.Dock="Right"/>
    <Slider Name="slider" Margin="8,0"/>
</DockPanel>